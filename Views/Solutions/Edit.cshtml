@model LucidiaIT.Models.SolutionModels.Solution

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Solution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="solution-info-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="solution-id" type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @*<textarea asp-for="Description" class="form-control"></textarea>*@                
                <div id="editor">
                    
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </form>
        <form id="solution-image-form">
            <div class="form-group">
                <label asp-for="SolutionImage" class="control-label"></label>
                <input asp-for="SolutionImage" type="file" class="form-control" />
                <span asp-validation-for="SolutionImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input value="Save" class="btn btn-default" id="edit-solution-btn" />
            </div>
        </form>
        @Html.AntiForgeryToken()
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/quill/quill.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var Delta = Quill.import('delta');
        var quill = new Quill('#editor', {
            modules: {
                toolbar: true
            },
            placeholder: 'Compose an epic...',
            theme: 'snow'
        });
    </script>
}