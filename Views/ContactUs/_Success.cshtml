@model LucidiaIT.Models.HomeViewModels.ContactUsViewModel;

@{ 
    Layout = null;
}

<div class="row">
    <div class="alert-success col-sm-8 contact-form-response">
        <h2>Great!!</h2>
        <p>Thank you, @Model.Name, for reaching out to Lucidia iT. We will get back to you as soon as we can and look forward to working with you in the future.</p>
        <p>In the mean time we've sent an email to @Model.EmailAddress! Please feel free to respond with any aditional information that you might have about the project that you had in mind.</p>
        <p>Have a great day!</p>
    </div>
</div>