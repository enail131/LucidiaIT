@model LucidiaIT.Models.HomeViewModels.ContactUsViewModel
@{
    ViewData["Title"] = "Contact";
}

@section Jumbotron {
    <div id="contact-us-jumbotron" class="jumbotron">
        <div class="col-xs-12 col-sm-8 col-md-5" id="jumbotron-content">
            <h2>Contact us.</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
    </div>
}

<div id="contact-container" class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6" id="contact-form-container">
            <h2>Email us.</h2>
            <form id="contact-us-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message"></label>
                    <textarea asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="btn btn-primary" id="send-email-btn">Send</div>
            </form>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="col-xs-12">
                <h2>Connect with us.</h2>
                <ul id="social-media-chicklets">
                    @*<li class="social-media-chicklet">
                        <a href="https://www.facebook.com">
                            <img src="~/images/facebook.svg" alt="Facebook logo" />
                        </a>
                    </li>*@
                    <li class="social-media-chicklet">
                        <a href="https://www.twitter.com/lucidiait/">
                            <img src="~/images/twitter.svg" alt="Twitter logo" />
                        </a>
                    </li>
                    <li class="social-media-chicklet">
                        <a href="https://www.instagram.com/lucidiait/">
                            <img src="~/images/instagram.svg" alt="Instagram logo" />
                        </a>
                    </li>
                    <li class="social-media-chicklet">
                        <a href="https://www.linkedin.com/lucidiait/">
                            <img src="~/images/linkedin.svg" alt="Linked in logo" />
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12">
                <h2>Reach out directly.</h2>
                <p>This is where address and phone number would go... or whatever you'd like</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}